generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model pref {
  pref_code  String  @unique
  pref_name  String
  pref_kana  String
  pref_roma  String
  @@index([pref_code])
}

model city {
  zip_code   String
  pref_code  String
  pref_kana  String
  pref_roma  String
  city_code  String
  city_name  String
  city_kana  String
  city_roma  String
  town_name  String
  town_kana  String
  town_roma  String
  @@unique([zip_code,city_code])
  @@index([zip_code])
}
